<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/imv_avatar_danhgiacuatoi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_avatar">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/txt_tenkhachhang_danhgiacuatoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:fontFamily="@font/montserrat"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>
            <RatingBar
                android:id="@+id/rb_ratingdanhgiacuatoi"
                android:isIndicator="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1"
                style="@style/CustomRatingBarStyle"/>
            <TextView
                android:id="@+id/txt_noidungdanhgiasanpham_dgct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Đây là phần đánh giá của khách hàng về sản phẩm"
                android:fontFamily="@font/montserrat"
                android:textSize="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3">
                <ImageView
                    android:id="@+id/imv_anhdanhgia1_dgct"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/spbong"/>
                <ImageView
                    android:id="@+id/imv_anhdanhgia2_dgct"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/spcaomong"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/imv_anhdanhgia3_dgct"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/spcancau"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/bordersanpham"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/imv_anhsp_dgct"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/spbong"
                    android:foreground="@drawable/bordersanpham"/>
                <TextView
                    android:id="@+id/txt_tensp_dgct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm mà khách hàng đã mua"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>