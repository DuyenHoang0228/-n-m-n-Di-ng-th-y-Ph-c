<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrangSanPhamActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_hinhanhsanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>
            <TextView
                android:id="@+id/txt_tensanpham_trangsanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sản phẩm dầu gội cho chó"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_thuonghieu_trangsanpham"
                android:textSize="20sp"
                android:text="Thương hiệu:abc"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="360000"
                        android:id="@+id/txt_giamoi_trangsanpham"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500000"
                        android:id="@+id/txt_giacu"
                        android:textSize="13sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiết kiệm 30%"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_danh_gia_cua_toi"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_danh_gia_cua_toi"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_danh_gia_cua_toi"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_danh_gia_cua_toi"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_danh_gia_cua_toi"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/txt_sosaodanhgia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 |"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/txt_soluotdaban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượt đã bán: 1020  "
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imv_traitim"
                    android:src="@drawable/icon_sp_yeu_thich"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imv_chiase"
                    android:src="@drawable/icon_share"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_tieudethongtinsanpham"
                android:text="Thông tin sản phẩm"
                android:textSize="13sp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Thương hiệu đến từ công ty uy tín Synergy Labs của Mỹ được đánh giá là 1 trong những công ty danh tiếng nhất toàn cầu về các sản phẩm chuyên dụng chăm sóc sức khỏe cho thú cưng."/>
            <Button
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ẩn bớt"/>
<!--            chưa xử lý-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_danhgiasanpham"
                    android:text="Đánh giá sản phẩm"
                    android:textSize="13sp"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_danh_gia_cua_toi"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_danh_gia_cua_toi"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_danh_gia_cua_toi"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_danh_gia_cua_toi"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/txt_sosaodanhgia_soluotdaban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/5 (100 lượt đánh giá)"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem tất cả -->"
                        android:layout_gravity="center"
                        android:layout_marginLeft="50dp"/>

                </LinearLayout>

            </LinearLayout>
            <ListView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
<!--                đánh giá-->

            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"/>

<!--            sản phẩm có thể bạn thích-->
            





        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Mua ngay"
            android:id="@+id/btn_muangay"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Thêm vào giỏ hàng"
            android:id="@+id/btn_themvaogiohang"/>
    </LinearLayout>


</LinearLayout>