<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_spthanhtoan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E3E3E3"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_hinhsanpham"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/giohang_sp2"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/txt_tensanpham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[COMBO 5 GÓI] Thức Ăn Cho Chó ..."
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14sp"
            android:justificationMode="inter_word"
            android:textColor="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/txt_giasanphamchuagiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.000 VNĐ"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:textColor="#9F9F9F"
                android:foreground="@drawable/line_hr_pink"
                android:foregroundTint="#9F9F9F"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <TextView
                android:id="@+id/txt_giasanphamdagiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000 VNĐ"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_soluongsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="x1"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:textColor="@color/black"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>