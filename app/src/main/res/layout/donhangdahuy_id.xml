<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="3"
    android:background="@drawable/backgroundstrokedonhang">

    <ImageView
        android:id="@+id/imv_hinhsanpham"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_weight="2"
        android:src="@drawable/giohang_sp1"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/txt_brandsanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thương hiệu: Virbac"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_tensanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gel Dinh Dưỡng Cho Chó Mèo Còi Cọc Virbac Nutri Plus 120g – Pháp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@+id/txt_brandsanpham"/>


        <TextView
            android:id="@+id/txt_tongsoluongsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng sản phẩm: 3"
            android:fontFamily="@font/montserrat"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_above="@+id/txt_thanhtien"/>

        <TextView
            android:id="@+id/txt_thanhtien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền: đ268.000"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_above="@+id/section_btn"/>


        <LinearLayout
            android:id="@+id/section_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/btn_mualai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFA0CA"
                android:text="Đã được hủy bởi bạn"
                android:fontFamily="@font/montserrat_light"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_weight="1"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/btn_danhgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFA0CA"
                android:text="Đánh giá"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_weight="1"/>

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>