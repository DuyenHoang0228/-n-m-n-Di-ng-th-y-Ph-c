<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/cbox_chonspgiohang"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:buttonTint="#FFA0CA"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/imv_spgiohang"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:src="@drawable/giohang_sp1"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_brandsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thương hiệu: Virbac"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="13sp"
                android:textColor="#FFA0CA"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_deletesp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Xóa"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="13sp"
                android:textColor="#818181" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_tensanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gel Dinh Dưỡng Cho Chó Mèo Còi Cọc Virbac Nutri Plus 120g – Pháp"
            android:fontFamily="@font/montserrat"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:justificationMode="inter_word"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txt_phanloaishop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOP CHO CHÓ"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white"
            android:padding="3dp"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"
            android:background="#FFA0CA"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_giasanphamdagiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat"
                android:text="190.000 VNĐ"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_giasanphamchuagiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250.000 VNĐ"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:foreground="@drawable/line_hr_pink"
                android:foregroundTint="#9F9F9F"
                android:textColor="#9F9F9F"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_giamsoluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/trianglebutton"
                android:rotation="180"/>

            <TextView
                android:id="@+id/txt_soluongsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/montserrat"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <ImageButton
                android:id="@+id/btn_tangsoluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/trianglebutton" />


            <TextView
                android:id="@+id/txt_tongtiensp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>