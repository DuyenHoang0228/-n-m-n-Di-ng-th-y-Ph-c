<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <CheckBox
        android:id="@+id/cb_chonspgiohang"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center" />
    
    <ImageView
        android:id="@+id/imv_spgiohang"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:src="@drawable/giohang_sp1"
        android:scaleType="centerCrop" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_brandsanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thương hiệu: Virbac"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="15sp"
            android:textColor="#FFA0CA"/>

        <TextView
            android:id="@+id/txt_tensanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gel Dinh Dưỡng Cho Chó Mèo Còi Cọc Virbac Nutri Plus 120g – Pháp"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txt_phanloaishop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOP CHO CHÓ"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white"
            android:padding="3dp"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:background="#FFA0CA"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_giasanphamdagiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="190.000 VNĐ"
                android:fontFamily="@font/montserrat"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_giasanphamchuagiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250.000 VNĐ"
                android:fontFamily="@font/montserrat"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:foreground="@drawable/line_hr_pink"
                android:foregroundTint="#9F9F9F"
                android:textColor="#9F9F9F"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_giamsoluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/trianglebutton"
                android:rotation="180"/>

            <TextView
                android:id="@+id/txt_soluongsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/montserrat"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <ImageButton
                android:id="@+id/btn_tangsoluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/trianglebutton" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>