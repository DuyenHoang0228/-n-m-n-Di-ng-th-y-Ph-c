<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietVoucher"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:foreground="@drawable/customborder2"
        android:foregroundTint="#9E7E44"
        android:weightSum="7"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imv_voucherThumb"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/voucher_giam_gia1"
            android:scaleX="1.3"
            android:scaleY="1.3"/>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:padding="2dp">
            <TextView
                android:id="@+id/txt_tenvoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên voucher"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/txt_vouchertoida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:foreground="@drawable/customborder"
                android:foregroundTint="#EC1313"
                android:text="Tối đa 25K"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="12dp"
                android:textColor="#EC1313"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/icon_hsd"/>
                <TextView
                    android:id="@+id/txt_hsdvoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat_thin"
                    android:text="Sắp hết hạn: Còn 2 ngày"
                    android:layout_marginTop="5dp"
                    android:textColor="#EC1313"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noidungvoucher"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btn_dungngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Dùng ngay"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>