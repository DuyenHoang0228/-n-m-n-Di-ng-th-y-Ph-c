<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thongbao"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FAE5EC">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/customshapeborderwhite"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Thông báo"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:fontFamily="@font/montserratregular"
            android:textSize="15sp"
            android:layout_weight="6"></TextView>
        <CheckBox
            android:id="@+id/chk_thongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_defaultselected"></CheckBox>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông báo của tôi"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratregular"
        android:textSize="15sp"></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/customshapeborderwhite"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Cập nhật đơn hàng"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:fontFamily="@font/montserratregular"
            android:textSize="15sp"
            android:layout_weight="6"></TextView>
        <CheckBox
            android:id="@+id/chk_capnhatdonhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_defaultselected"></CheckBox>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/customshapeborderwhite"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Khuyến mãi"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:fontFamily="@font/montserratregular"
            android:textSize="15sp"
            android:layout_weight="6"></TextView>
        <CheckBox
            android:id="@+id/chk_khuyenmai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_defaultselected"></CheckBox>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/customshapeborderwhite"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Hoạt động"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:fontFamily="@font/montserratregular"
            android:textSize="15sp"
            android:layout_weight="6"></TextView>
        <CheckBox
            android:id="@+id/chk_hoatdong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_defaultselected"></CheckBox>
    </RelativeLayout>
</LinearLayout>