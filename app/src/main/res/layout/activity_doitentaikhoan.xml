<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doitentaikhoan"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FAE5EC">
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên hiện tại của bạn"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        android:textSize="15sp"></TextView>
    <EditText
        android:id="@+id/edt_tenhientai"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/customshapeborderwhite"
        android:text="littlemermaid@user"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="15sp"
        android:gravity="center_vertical"></EditText>
    <Button
        android:id="@+id/btn_thaydoiten"
        android:layout_marginTop="30dp"
        android:background="@drawable/customshapeborder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thay đổi"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="15sp"></Button>
</LinearLayout>