<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bordersanpham"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imv_hinhsanpham"
                android:layout_width="200dp"
                android:layout_height="144dp"
                android:src="@drawable/hinhsanpham"/>

            <TextView
                android:id="@+id/txt_tensanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="8dp"
                android:text="Thức ăn cho mèo Felipro 500g - Giảm sỏi mật - Vị hải sản"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@+id/imv_hinhsanpham"/>

            <TextView
                android:id="@+id/txt_brandsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Hãng: Felipro"
                android:layout_below="@+id/txt_tensanpham"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_giasanphamchuagiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:paddingLeft="5dp"
                android:text="32.000 đ"
                android:textColor="#D44837"
                android:layout_below="@+id/txt_brandsanpham"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imv_gioHang"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:layout_below="@+id/txt_brandsanpham"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="83dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/txt_giasanphamchuagiam"
                android:src="@drawable/icon_cart" />

            <TextView
                android:id="@+id/txt_giasanphamdagiam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/montserrat_light"
                android:foreground="@drawable/strikethroughtext"
                android:text="36.000 đ"
                android:textSize="12sp"
                android:layout_below="@+id/txt_giasanphamchuagiam"/>


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>