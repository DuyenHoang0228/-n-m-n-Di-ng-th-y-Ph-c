<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quenmatkhau2"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imv_quaylai"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_return_pink"
        android:layout_marginStart="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt lại mật khẩu"
        android:textColor="#FA579F"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FFC6DF"
        android:background="@drawable/customshape">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_password"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_nhapmatkhau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFC6DF"
                    android:hint="Mật khẩu mới"
                    android:fontFamily="@font/montserrat"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFC6DF"
        android:background="@drawable/customshape">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_password"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_nhaplaimatkhau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFC6DF"
                    android:hint="Nhập lại mật khẩu"
                    android:fontFamily="@font/montserrat"
                    android:inputType="textPassword" android:layout_marginRight="10dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_xacnhan"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FA579F"
        android:layout_gravity="center"
        android:text="Xác nhận"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="5dp"
        android:fontFamily="@font/montserrat_bold"/>

</LinearLayout>