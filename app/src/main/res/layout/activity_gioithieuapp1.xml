<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA0CA"
    android:orientation="vertical"
    tools:context=".gioithieuapp1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="1.2"
        android:src="@drawable/introduction1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="20dp"
        android:text="CHĂM SÓC THÚ CƯNG HIỆN ĐẠI"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Đảm bảo thú cưng có môi trường sống tốt nhất"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"
        android:textSize="18sp" />
        <Button
            android:id="@+id/btn_tieptheo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/white"
            android:shadowColor="@color/black"
            android:text="tiếp theo"
            android:textColor="#FFA0CA"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>



</ScrollView>