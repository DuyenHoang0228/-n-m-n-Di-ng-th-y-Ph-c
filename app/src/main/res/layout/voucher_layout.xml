<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_anhsanpham"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/spcat"/>
    <TextView
        android:id="@+id/txt_tensanpham"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_tenthuonghieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hãng"
        android:textSize="12sp"
        android:textColor="@color/black"/>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_giadagiam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30000 đ"
            android:textSize="12sp"
            android:textColor="#FB0202"/>

        <TextView
            android:id="@+id/txt_giachuagiam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40000 đ"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_below="@id/txt_giadagiam"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_cart"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>

</LinearLayout>