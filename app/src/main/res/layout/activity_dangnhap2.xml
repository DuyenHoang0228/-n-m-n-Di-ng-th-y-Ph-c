<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangnhap2"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imv_thoat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:src="@drawable/icon_exitt"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_circle"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mừng bạn trở lại !"
            android:textSize="20sp"
            android:textColor="#FFA0CA"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập thông tin của bạn để tiếp tục khám phá"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFC6DF"
            android:background="@drawable/customshape">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_account"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/edt_nhapemailhoacsdt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Email hoặc số điện thoại"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFC6DF"
            android:background="@drawable/customshape">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_password"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFC6DF"
                        android:hint="Mật khẩu"
                        android:fontFamily="@font/montserrat"
                        android:inputType="textPassword" android:layout_marginRight="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/txt_quenmatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Quên mật khẩu?"
            android:textColor="#FA579F"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_dangnhap"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FA579F"
            android:layout_gravity="center"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="@font/montserrat_bold"/>
        <Button
            android:id="@+id/btn_dangki"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FA579F"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Chưa có tài khoản? Đăng kí"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="@font/montserrat_bold"/>
    </LinearLayout>
</ScrollView>