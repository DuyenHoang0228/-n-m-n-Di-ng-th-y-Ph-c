<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imv_hinhsanpham"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:src="@drawable/sphatcho"

        />
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_tensanpham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Sản phẩm hạt cho chó"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_thuonghieu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hãng: Felipro"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_giamoi"
                    android:text="32000đ"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_giacu"
                    android:text="36000đ"/>
                    
            </LinearLayout>
            <ImageView
                android:id="@+id/imv_anhgiohang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_cart"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>